<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>

<GridPane fx:id="detailsPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          hgap="10" vgap="10">
    <rowConstraints>
        <RowConstraints vgrow="NEVER" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" />
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
    <Label text="Name:" styleClass="label-bright"
           GridPane.halignment="RIGHT" GridPane.valignment="TOP" />
    <Label fx:id="owner" styleClass="label-bright"
           GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.valignment="TOP" />
</GridPane>
